		                                </copy>
		                                <copy todir="${project.build.directory}/${project.build.finalName}/resources/images" overwrite="true">
		                                    <fileset dir="${basedir}/src/main/webapp/resources/libs/search/images" includes="**/*" excludes="**/.svn, **/.svn/**, **/*.psd" />
