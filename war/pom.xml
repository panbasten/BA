										<include>${project.build.directory}/${project.build.finalName}/resources/scripts/preload.js</include>
									</includes>
								</aggregation>
							</aggregations>
						</configuration>
					</plugin>
					
					<plugin>
						<groupId>com.plywet.platform.dk</groupId>
						<artifactId>dk-build-plugin</artifactId>
						<version>1.0</version>
						 <executions>
						    <execution>
						      <id>replcace jsp template</id>
