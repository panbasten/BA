									<insertNewLine>true</insertNewLine>
									<removeIncluded>true</removeIncluded>
									<output>${project.build.directory}/${project.build.finalName}/resources/styles/login.compressed.css</output>
									<includes>
										<include>${project.build.directory}/${project.build.finalName}/resources/styles/login.css</include>
									</includes>
								</aggregation>
								<aggregation>
									<insertNewLine>true</insertNewLine>
									<removeIncluded>true</removeIncluded>
									<output>${project.build.directory}/${project.build.finalName}/resources/styles/editor.compressed.css</output>
									<includes>
